
@page "/builder"

<PageTitle>Resume Builder - Elevate CV</PageTitle>

<div class="max-w-7xl mx-auto">
    <div class="text-center mb-10">
        <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">Resume Builder</h1>
        <p class="mt-4 text-xl text-gray-500">
            Create a professional, ATS-friendly resume tailored to your target jobs
        </p>
    </div>
    
    <MudPaper Class="pa-6 mb-6">
        <MudText Typo="Typo.h5" Class="mb-4">Coming Soon</MudText>
        <MudText>
            We're working on implementing a complete resume builder with .NET and Blazor.
            Please check back later or try the Resume Analysis feature in the meantime.
        </MudText>
    </MudPaper>
    
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/analyze">
        Try Resume Analysis
    </MudButton>
</div>
