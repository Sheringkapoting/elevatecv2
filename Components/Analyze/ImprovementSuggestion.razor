@using MudBlazor

<div class="flex items-start gap-4 mb-4">
    <div>
        <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Warning" />
    </div>
    <div class="flex-grow">
        <!-- Added text-left class to fix alignment issue -->
        <MudText Typo="Typo.h6" Class="text-left">Improvement Suggestion</MudText>
        <MudText Typo="Typo.body1">@ChildContent</MudText>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}