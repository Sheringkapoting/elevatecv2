@using MudBlazor

<MudPaper Class="pa-6">
    <div class="text-left space-y-6">
        <div class="flex items-center space-x-2">
            <MudIcon Icon="@Icons.Material.Filled.BarChart" Color="Color.Primary" />
            <MudText Typo="Typo.h5" Class="text-left">Detailed Recommendations</MudText>
        </div>
        
        <MudDivider />
        
        <!-- First Improvement Suggestion -->
        <div class="flex items-start gap-4">
            <div>
                <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Warning" />
            </div>
            <div class="flex-grow">
                <!-- Added text-left class to fix alignment -->
                <MudText Typo="Typo.h6" Class="text-left">Improvement Suggestion</MudText>
                <MudText Typo="Typo.body1">Add more job-related keywords like: communication.</MudText>
            </div>
        </div>
        
        <MudDivider />
        
        <!-- Second Improvement Suggestion -->
        <div class="flex items-start gap-4">
            <div>
                <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Warning" />
            </div>
            <div class="flex-grow">
                <!-- Added text-left class to fix alignment -->
                <MudText Typo="Typo.h6" Class="text-left">Improvement Suggestion</MudText>
                <MudText Typo="Typo.body1">Use more achievement-oriented bullet points to highlight accomplishments.</MudText>
            </div>
        </div>
        
        <MudDivider />
        
        <!-- Third Improvement Suggestion -->
        <div class="flex items-start gap-4">
            <div>
                <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Warning" />
            </div>
            <div class="flex-grow">
                <!-- Added text-left class to fix alignment -->
                <MudText Typo="Typo.h6" Class="text-left">Improvement Suggestion</MudText>
                <MudText Typo="Typo.body1">Include more specific metrics and numbers to quantify achievements.</MudText>
            </div>
        </div>
    </div>
</MudPaper>